<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/add">
            </ImageView>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/food_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFoodName"
                    style="@style/TextInputEditText"
                    android:maxLength="@integer/name_length"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    style="@style/TextInputEditText"
                    android:maxLength="@integer/description_length"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/calories">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCalories"
                    style="@style/TextInputEditText"
                    android:maxLength="@integer/numbers_length"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/proteins">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProteins"
                    style="@style/TextInputEditText"
                    android:maxLength="@integer/numbers_length"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/carbohydrates">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCarbohydrates"
                    style="@style/TextInputEditText"
                    android:maxLength="@integer/numbers_length"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/fats">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFats"
                    style="@style/TextInputEditText"
                    android:maxLength="@integer/numbers_length"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>